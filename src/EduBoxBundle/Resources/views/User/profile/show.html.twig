{% extends '@EduBox/admin_layout.html.twig' %}

{% macro single_field(label, value) %}
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ label }}</label>
        <div class="col-sm-10">
            <input value="{{ value }}" class="form-control" disabled="disabled">
        </div>
    </div>
{% endmacro %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <h3 class="profile-username text-center">
                        @{{ app.user.username }}
                    </h3>
                    <p class="text-muted text-center">
                        {% for role in app.user.rolesWithoutRoleUser %}
                            {% set role = 'user.'~role %}
                            {{ role|trans([],'EduBoxBundle') }} {% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </p>
                    <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary btn-block">
                        {{ 'profile.edit.submit'|trans([], 'FOSUserBundle') }}
                    </a>
                </div>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#profile" data-toggle="tab" aria-expanded="false">Profile</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="profile">
                        <form class="form-horizontal">
                            {{ _self.single_field('Username', app.user.username) }}
                            {{ _self.single_field('Email', app.user.email) }}
                            {{ _self.single_field('Phone', app.user.phone) }}
                        </form>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
    </div>
{% endblock %}