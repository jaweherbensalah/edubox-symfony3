{% extends '@EduBox/admin_layout.html.twig' %}

{% set title = 'Subject_list'|trans([], 'EduBoxBundle') %}

{% set box_body %}
    <thead>
    <tr>
        <th>{{ 'subject'|trans([], 'forms') }}</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% if subjects is defined %}
        {% for subject in subjects %}
            <tr>
                <td>{{ subject.name }}</td>
                <td>
                    <a href="{{ path('edubox.admin.lesson_listLesson', {'subjectId': subject.id, 'studentsGroupId': studentsGroup.id}) }}" class="btn btn-success">
                        <i class="fa fa-list"></i>
                        {{ 'lessons'|trans([], 'forms') }}
                    </a>
                </td>
            </tr>
        {% endfor %}
    {% endif %}
    </tbody>
{% endset %}

{% block content %}
    {% include '@EduBox/Block/box_table.html.twig' with {'table_content':box_body} %}
{% endblock %}
