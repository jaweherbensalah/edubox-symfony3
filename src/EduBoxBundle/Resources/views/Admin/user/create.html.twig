{% extends '@EduBox/admin_layout.html.twig' %}

{% set title = 'User_create'|trans([], 'EduBoxBundle') %}

{% block actions %}
    <li>
        <a class="sonata-action-element" href="{{ path('edubox.admin.user_list') }}">
            <i class="fa fa-list" aria-hidden="true"></i>
            {{ 'link_action_list'|trans([], 'SonataAdminBundle') }}
        </a>
    </li>
{% endblock %}

{% set box_body %}
    <div class="row">
        <div class="col-md-4">
            <div class="form-group {% if not new_user_form.username.vars.valid %}has-error{% endif %}">
                {% include 'EduBoxBundle:Field:input.html.twig' with {'field':new_user_form.username} %}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group {% if not new_user_form.email.vars.valid %}has-error{% endif %}">
                {% include 'EduBoxBundle:Field:input.html.twig' with {'field':new_user_form.email} %}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group {% if not new_user_form.roles.vars.valid %}has-error{% endif %}">
                {% include 'EduBoxBundle:Field:input.html.twig' with {'field':new_user_form.roles} %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group {% if not new_user_form.plainPassword.first.vars.valid %}has-error{% endif %}">
                {% include 'EduBoxBundle:Field:input.html.twig' with {'field':new_user_form.plainPassword.first} %}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group {% if not new_user_form.plainPassword.second.vars.valid %}has-error{% endif %}">
                {% include 'EduBoxBundle:Field:input.html.twig' with {'field':new_user_form.plainPassword.second} %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group {% if not new_user_form.enabled.vars.valid %}has-error{% endif %}">
                {% include 'EduBoxBundle:Field:input.html.twig' with {'field':new_user_form.enabled} %}
            </div>
        </div>
    </div>
{% endset %}




{% block content %}
    {{ form_start(new_user_form) }}
    
        {% include 'EduBoxBundle:Block:box.html.twig' with {
            'box_body': box_body,
        } only %}
    
        <div class="sonata-ba-form-actions well well-small form-actions">
            {{ form_widget(new_user_form.submit, {'attr':{'class':'btn btn-success'},'label':'btn_create'|trans([], 'SonataAdminBundle') }) }}
        </div>
    {{ form_end(new_user_form) }}
{% endblock %}