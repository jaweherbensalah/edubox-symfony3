{% extends '@EduBox/admin_layout.html.twig' %}
{% trans_default_domain 'EduBoxBundle' %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src="{{ user.webProfilePicturePath }}" alt="User profile picture">
                    <h3 class="profile-username text-center">
                        {{ user.fullname }}
                        <hr>
                        @{{ user.username }}
                    </h3>

                    <p class="text-muted text-center">
                        {% for role in user.rolesWithoutRoleUser %}
                            {% set role = 'user.'~role %}
                            {{ role|trans }} {% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </p>
                    <a href="#" class="btn btn-primary btn-block"><b>Send message</b></a>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#profile" data-toggle="tab" aria-expanded="false">Profile</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="settings">
                        <strong> Email: </strong>
                        {% if user.email != null %}
                            {{ user.email }}
                        {% else %}
                            -
                        {% endif %}
                        <hr>
                        <strong> Phone: </strong>
                        {% if user.phone != null %}
                            {{ user.phone }}
                        {% else %}
                           -
                        {% endif %}
                        <hr>
                        <strong> Birthday: </strong>
                        {% if user.birthday != null %}
                            {{ user.birthday.format('d.m.Y') }}
                        {% else %}
                            -
                        {% endif %}
                        <hr>
                        <strong> Gender: </strong>
                        {% if user.genderAsString != null %}
                            {{ user.genderAsString }}
                        {% else %}
                            -
                        {% endif %}
                        <hr>
                        <strong> Parent phone: </strong>
                        {% if user.parent.phone is defined %}
                            {{ user.parent.phone }}
                        {% else %}
                            -
                        {% endif %}
                        <hr>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
    </div>
{% endblock %}