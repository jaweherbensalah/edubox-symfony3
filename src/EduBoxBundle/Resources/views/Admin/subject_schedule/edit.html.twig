{% extends '@EduBox/admin_layout.html.twig' %}

{% set title = 'Subject_schedules_edit'|trans([], 'EduBoxBundle') %}

{% block actions %}
    <li>
        <a class="sonata-action-element" href="{{ path('edubox.admin.subject_schedule_list') }}">
            <i class="fa fa-list" aria-hidden="true"></i>
            {{ 'link_action_list'|trans([], 'SonataAdminBundle') }}
        </a>
    </li>
{% endblock %}

{% set box_body %}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {% include '@EduBox/Field/input.html.twig' with {'field':subject_schedules_group_form.name} %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {% include '@EduBox/Field/input.html.twig' with {'field':subject_schedules_group_form.active} %}
            </div>
        </div>
    </div>
{% endset %}

{% block content %}
    {{ form_start(subject_schedules_group_form) }}
    {% include '@EduBox/Block/box.html.twig' with {'box_body':box_body} %}
    <div class="sonata-ba-form-actions well well-small form-actions">
        {{ form_widget(subject_schedules_group_form.submit, {'attr':{'class':'btn btn-success'},'label':'save'|trans([], 'forms') }) }}
    </div>
    {{ form_end(subject_schedules_group_form) }}
{% endblock %}
