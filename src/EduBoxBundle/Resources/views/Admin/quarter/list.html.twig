{% extends 'EduBoxBundle::admin_layout.html.twig' %}

{% set title = 'Quarters' %}


{% block content %}
    {% if studentsGroups is defined %}
        <div class="row">
            <div class="col-md-4">
                <div class="box box-primary">
                    <div class="box-header">
                        <div class="box-title">
                            Students groups
                        </div>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-bordered table-striped table-hover sonata-ba-list">
                            {% if studentsGroups|length > 0 %}
                            <thead>
                                <tr>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for studentsGroup in studentsGroups %}
                                    <tr>
                                        <td>
                                            <a href="{{ path(app.request.get('_route'), {'studentsGroupId': studentsGroup.id}) }}">
                                                {% if studentsGroupId == studentsGroup.id %}
                                                    <strong>{{ studentsGroup.name }}</strong>
                                                {% else %}
                                                    {{ studentsGroup.name }}
                                                {% endif %}
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            {% else %}
                                <tr>
                                    <th>Students groups not found</th>
                                </tr>
                            {% endif %}
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header">
                        <div class="box-title">
                            Students
                        </div>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-bordered table-striped table-hover sonata-ba-list">
                            {% if students|length > 0 %}
                                <thead>
                                    <th>Name</th>
                                </thead>
                                <tbody>
                                    {% for student in students %}
                                        <tr>
                                            <td><a href="{{ path('edubox.admin.quarter_show',{'studentId': student.id}) }}">{{ student.fullname }}</a></td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            {% else %}
                                {% if studentsGroupId == null %}
                                    <tr>
                                        <th>Please select a students group</th>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <th>Students not found</th>
                                    </tr>
                                {% endif %}
                            {% endif %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% elseif students is defined %}
        <div class="box box-primary">
            <div class="box-header">
                <div class="box-title">
                    Students groups
                </div>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-bordered table-striped table-hover sonata-ba-list">
                    <thead>
                        <tr>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for student in students %}
                            <tr>
                                <td><a href="{{ path('edubox.admin.quarter_show',{'studentId': student.id}) }}">{{ student.fullname }}</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}