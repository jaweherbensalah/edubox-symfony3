
{% set table_content = table_content is defined ? table_content : '' %}

<div class="box box-primary">
    {% if box_header is defined %}
        <div class="box-header">
            {{ box_header|raw }}
        </div>
    {% endif %}
    {% if box_title is defined %}
        <div class="box-header">
            <div class="box-title">{{ box_title|raw }}</div>
        </div>
    {% endif %}
    <div class="box-body table-responsive no-padding">
        <table class="table table-bordered table-striped table-hover">
            {{ table_content }}
        </table>
    </div>
</div>

